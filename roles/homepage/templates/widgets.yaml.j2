- resources:
    cpu: true
    memory: true
    disk: /
    cputemp: true
    uptime: true

- search:
    provider: google
    target: _blank
    showSearchSuggestions: true

- openmeteo:
    label: Vienna 
    latitude: 48.210033
    longitude: 16.363449
    timezone: "{{ infrastructure.time_zone }}" # optional
    units: metric #metric or imperial
    cache: 5 # Time in minutes to cache API responses, to stay within limit
